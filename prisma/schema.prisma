generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider              = "zod-prisma"
  output                = "./zod"
  modelCase             = "PascalCase"
  modelSuffix           = "Model"
  prismaJsonNullability = "true"
  relationModel         = "true"
  useDecimalJs          = "true"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String?
  lastName  String?
  createdAt DateTime @default(now())
}

model Move {
  id        Int         @id @default(autoincrement())
  codeNo    String
  name      String
  imageUrl  String?
  techValue Float
  combos    ComboMove[]
}

model Combo {
  id           Int         @id @default(autoincrement())
  name         String
  movesInCombo ComboMove[]
}

model ComboMove {
  comboId Int
  moveId  Int
  rank    Int
  combo   Combo @relation(fields: [comboId], references: [id])
  move    Move  @relation(fields: [moveId], references: [id])

  @@id([comboId, rank])
}
